<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    tools:context=".view.activity.YingYuanXiangQing">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_24">

        <ImageView
            android:id="@+id/yyxq_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_6"
            android:text="影院详情"
            android:textColor="#d8d8d8"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_24">

        <TextView
            android:id="@+id/yyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:textColor="#deffffff"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <CheckBox
            android:button="@null"
            android:id="@+id/yyimg"
            android:layout_width="20dp"
            android:layout_height="18.8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/guanzhu_selector" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/yy_xiangqing_text_shap"
                android:padding="@dimen/dp_7"
                android:textColor="#d3af56"
                android:textSize="@dimen/sp_12" />

            <!--<TextView-->
            <!--android:id="@+id/bq2"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/dp_10"-->
            <!--android:background="@drawable/yy_xiangqing_text_shap"-->
            <!--android:padding="@dimen/dp_7"-->
            <!--android:text="bbbb"-->
            <!--android:textColor="#d3af56"-->
            <!--android:textSize="@dimen/sp_12" />-->

            <!--<TextView-->
            <!--android:id="@+id/bq3"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/dp_10"-->
            <!--android:background="@drawable/yy_xiangqing_text_shap"-->
            <!--android:padding="@dimen/dp_7"-->
            <!--android:text="cccc"-->
            <!--android:textColor="#d3af56"-->
            <!--android:textSize="@dimen/sp_12" />-->

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_toLeftOf="@+id/dao"
            android:padding="@dimen/dp_10"
            android:src="@drawable/luxian" />

        <TextView
            android:id="@+id/dao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:text="到这里去"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/yytab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:background="#1c2243"
        app:tabTextColor="@android:color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/yypage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24" />
    
    <Button
        android:id="@+id/yybtnpaiqi"
        android:text="查看该影院电影排期"
        android:textColor="#ffffff"
        android:background="#e8185e"
        android:textSize="@dimen/sp_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />

</LinearLayout>