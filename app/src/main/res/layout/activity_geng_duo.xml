<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    tools:context=".view.activity.GengDuoActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/gengduo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@drawable/back" />

        <EditText
            android:id="@+id/gengduo_sou"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_toRightOf="@id/gengduo_back"
            android:background="@drawable/sou_shape"
            android:hint="请输入搜索内容"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/dp_20"
            android:singleLine="true" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/gengduo_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal" />

    <android.support.v4.view.ViewPager
        android:id="@+id/gengduo_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10" />
</LinearLayout>