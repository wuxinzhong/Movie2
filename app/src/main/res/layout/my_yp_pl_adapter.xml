<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:background="#1c2243"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_231">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ypplimg"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_101" />

        <TextView
            android:id="@+id/ypplname"
            android:text="你是哪个哟"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/ypplimg"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/yppldy"
            android:text="你是哪个哟"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_toRightOf="@id/ypplimg"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ypplyy"
            android:text="你是哪个哟"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_67"
            android:layout_toRightOf="@id/ypplimg"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ypplpf"
            android:text="你是哪个哟"
            android:layout_marginLeft="@dimen/dp_10"
            android:lines="1"
            android:layout_marginTop="@dimen/dp_94"
            android:layout_toRightOf="@id/ypplimg"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="@dimen/dp_121"
            android:background="#ffffff"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"/>

        <TextView
            android:text="我的评论"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_133"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ypplpl"
            android:textSize="@dimen/sp_11"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_163"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/ypplrb"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:layout_marginTop="@dimen/dp_207"
            android:layout_marginLeft="@dimen/dp_10"
            android:progressBackgroundTint="@android:color/white"
            android:progressTint="#e8185e"
            android:rating="2.5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/yppltime"
            android:textColor="#fff"
            android:text="1999-05-06"
            android:textSize="@dimen/sp_11"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_207"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>