<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".view.activity.LoginActivity">


    <ImageView
        android:id="@+id/login_img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_27"
        android:padding="@dimen/dp_10"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_230"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/login_btn_shap"
            android:hint="请输入邮箱账户"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/secondary_text_dark"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_25"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/login_edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_shap"
                android:hint="请输入密码"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/secondary_text_dark"
                android:textSize="@dimen/sp_15" />

            <Button
                android:id="@+id/login_btn_wang"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:background="@drawable/login_btn_huo_shap"
                android:text="忘记密码" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_25">

            <TextView
                android:id="@+id/login_zhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="暂无账号?立即注册"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/login_btn_login_shap"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_73"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_73"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_3"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="或"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_3"
                android:background="#ffffff" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_wei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/login_btn_wei_shap"
            android:padding="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/loginweixin" />

    </LinearLayout>


</LinearLayout>